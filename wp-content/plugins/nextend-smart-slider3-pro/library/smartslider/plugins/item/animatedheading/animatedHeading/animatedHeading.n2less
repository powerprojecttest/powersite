(~'div#@{sliderid}') {
  .n2-ss-animated-heading-wrapper {
    position: relative;
    line-height: 1.5;
  }

  .n2-ss-animated-heading-wrapper div {
    display: inline-block;
    vertical-align: top;
  }

  .n2-ss-animated-heading-wrapper > div,
  .n2-ss-animated-heading-wrapper > a {
    vertical-align: middle;
    display: inline-block;
  }

  .n2-ss-animated-heading-i {
    position: relative;
  }

  .n2-ss-animated-heading-i2 {
    position: relative;
    width: 100%;
    height: 100%;
  }

  .n2-ss-animated-heading-i-text {
    position: absolute;
    left: 0;
    top: 0;
    white-space: nowrap;
  }

  .n2-ss-animated-heading-i-text.n2-ss-animated-heading-measure-width * {
    display: inline-block !important;
  }

  .n2-ss-animated-heading-i-cursor {
    background: #fff;
    display: inline-block;
    height: 100%;
    width: 2px;
    margin-left: -2px;
    transform: translateX(3px);
  }

  .n2-ss-animated-heading-i-selection .n2-ss-animated-heading-i-cursor {
    visibility: hidden;
  }
}